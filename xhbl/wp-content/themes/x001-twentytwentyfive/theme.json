{
	"version": 3,
	"settings": {
		"layout": {
			"contentSize": "920px",
			"wideSize": "1000px"
		},
		"typography": {
			"fontSizes": [
				{
					"fluid": false,
					"name": "Small",
					"size": "0.875rem",
					"slug": "small"
				},
				{
					"fluid": {
						"max": "1.125rem",
						"min": "1rem"
					},
					"name": "Medium",
					"size": "1rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"max": "1.275rem",
						"min": "1.15rem"
					},
					"name": "Large",
					"size": "1.15rem",
					"slug": "large"
				},
				{
					"fluid": {
						"max": "1.5rem",
						"min": "1.275rem"
					},
					"name": "Extra Large",
					"size": "1.275rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"max": "2rem",
						"min": "1.6rem"
					},
					"name": "Extra Extra Large",
					"size": "1.6rem",
					"slug": "xx-large"
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "system-ui,-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",\"Microsoft YaHei\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"name": "Fira Code",
					"slug": "fira-code",
					"fontFamily": "\"Fira Code\", monospace",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/fira-code/FiraCode-VariableFont_wght.woff2"
							],
							"fontWeight": "300 700",
							"fontStyle": "normal",
							"fontFamily": "\"Fira Code\""
						}
					]
				}
			]
		},
		"color": {
			"palette": [
				{
					"color": "#F0F0F0",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#111111",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#015785",
					"name": "Accent 1",
					"slug": "accent-1"
				},
				{
					"color": "#FFFFFF",
					"name": "Accent 2",
					"slug": "accent-2"
				},
				{
					"color": "#2296D5",
					"name": "Accent 3",
					"slug": "accent-3"
				},
				{
					"color": "#353535",
					"name": "Accent 4",
					"slug": "accent-4"
				},
				{
					"color": "#ABDCF5",
					"name": "Accent 5",
					"slug": "accent-5"
				},
				{
					"color": "#FFFFFF33",
					"name": "Accent 6",
					"slug": "accent-6"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var:preset|font-family|system-font",
			"fontSize": "var:preset|font-size|large",
			"fontWeight": "400",
			"lineHeight": "1.6"
		},
		"blocks": {
			"core/post-terms": {
				"css": "& a { white-space: normal; word-break: break-word; overflow-wrap: break-word; }",
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "400"
				}
			},
			"core/search": {
				"css": "& .wp-block-search__input{border-radius:10px}",
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"lineHeight": "1.6"
				},
				"elements": {
					"button": {
						"border": {
							"radius": "10px"
						}
					}
				}
			},
			"core/separator": {
				"color": {"text": "var:preset|color|accent-4"},
				"border": {
					"width": "0 0 1px 0",
					"style": "solid"
				}
			}
		},
		"elements": {
			"button": {
				"border": {
					"radius": "10px"
				},
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				},
				"color": {
					"background": "var:preset|color|accent-3",
					"text": "var:preset|color|accent-2"
				},
				":focus": {
					"outline": {
						"color": "var:preset|color|accent-4",
						"offset": "2px"
					}
				},
				":hover": {
					"color": {
						"background": "color-mix(in srgb, var(--wp--preset--color--accent-3) 85%, transparent)",
						"text": "var:preset|color|accent-2"
					},
					"border": {
						"color": "transparent"
					}
				},
				"spacing": {
					"padding": {
						"bottom": "0.7rem",
						"left": "1.5rem",
						"right": "1.5rem",
						"top": "0.7rem"
					}
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|accent-1"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline dashed"
					}
				},
				"typography": {
					"textDecoration": "none"
				}
			}
		}
	}
}
